<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="80.0" prefWidth="1280.0" stylesheets="@../values/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewControllers.CitaItem">
   <children>
      <Label fx:id="numcita" alignment="CENTER" prefWidth="150.0" text="No. cita">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="paciente" alignment="CENTER" prefHeight="21.0" prefWidth="230.0" text="Paciente">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="hora" alignment="CENTER" prefWidth="150.0" text="Hora">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="fecha" alignment="CENTER" prefHeight="49.0" prefWidth="160.0" text="Fecha" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label fx:id="lugar" alignment="CENTER" prefHeight="21.0" prefWidth="130.0" text="Lugar">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="100.0">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#editItem" prefHeight="40.0" prefWidth="40.0">
               <graphic>
                  <ImageView fx:id="editButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/editIcon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteItem" prefHeight="40.0" prefWidth="40.0">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fx:id="deleteButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/deleteIcon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </HBox>
   </children>
</HBox>
