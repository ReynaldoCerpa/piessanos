<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER" prefHeight="50.0" prefWidth="1280.0" stylesheets="@../values/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewControllers.PacientesItem">
   <children>
      <Label fx:id="id" alignment="CENTER" prefWidth="150.0" text="id">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="346.0">
         <children>
            <Label fx:id="nombre" alignment="CENTER" prefHeight="21.0" text="Nombre">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="nomPaterno" alignment="CENTER" prefHeight="21.0" text="Apellido">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="nomMaterno" alignment="CENTER" prefHeight="21.0" text="Apellido">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <Label fx:id="telefono" alignment="CENTER" prefHeight="21.0" prefWidth="121.0" text="Telefono">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="140.0">
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#openExpediente" prefHeight="40.0" prefWidth="40.0" styleClass="medicoItem">
               <graphic>
                  <ImageView fx:id="deleteButton1" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/folderIcon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#editItem" prefHeight="40.0" prefWidth="40.0" styleClass="medicoItem">
               <graphic>
                  <ImageView fx:id="editButton" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/editIcon.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </HBox>
   </children>
</HBox>
